<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
	<settings>
		<setting name="jdbcTypeForNull" value="NULL"/> <!-- 널값 -->
		<setting name="mapUnderscoreToCamelCase" value="true"/> <!-- 카멜 표기법 -->
	</settings>
	
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="oracle.jdbc.driver.OracleDriver" />
				<property name="url" value="jdbc:oracle:thin:@localhost:1521:xe" />
				<property name="username" value="sje" />
				<property name="password" value="sje" />
			</dataSource>
		</environment>
	</environments>
	
	<!-- mapper인터페이스 연결, 실제 mapper 연결, 쿼리 가져오기 -->
	<!-- mapper만들때 마다 추가로 생성 -->
	<mappers>
		<mapper resource="co/micol/prj/book/mapper/BookMapper.xml" />
	</mappers>
</configuration>